<% if @user.first_name == nil %>
  <h3><%= @user.username %></h3>
<% else %>
  <h3><%= @user.first_name %></h3>
  <p><%= @user.username %></p>
<% end %>

<% if @user.location != nil %>
  <p><%= @user.location %></p>
<% end %>

<% unless current_user == @user %>
  <div id="follow_form">
  <% if current_user.following?(@user) %>
    <%= render 'unfollow' %>
  <% else %>
    <%= render 'follow' %>
  <% end %>
  </div>
<% end %>

<% @user.followers.each do |follower| %>
  <%= follower.username %>
<% end %>

<% if @user == current_user %>
<%= link_to 'Edit Profile', edit_user_registration_path %>
<% end %>

<div>
  <%= image_tag @user.avatar.url(:medium), class: 'user-profile' %>
</div>

<% @user_photos.each do |photo| %>
  <p><img src="<%= photo %>"></p>
<% end %>

<% if current_user == user_signed_in? %>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Welcome, <%= current_user.username %>!</h4>
      </div>
      <div class="modal-body">
        You last signed in at <%= last_sign_in_at %>. Would you like to take a photo today?
      </div>
      <div class="modal-footer">
        <%= button_to "Take a photo!", photos_path, method: :get, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<% end %>
