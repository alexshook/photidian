<%= javascript_include_tag 'photos' %>

<div class='buttons'>
  <button id='start' class='btn btn-primary'><%= fa_icon "camera-retro" %> Start Camera!</button>
  <button id='take-photo' class='btn btn-primary'>Take Photo!</button>
  <button id='upload-button' class='btn btn-primary'>Use this photo for <%= Date.today.to_formatted_s(:long) %>.</button>
</div>

<div class="video-canvas col-md-6">
  <video id='vid' width ='500' height='375'></video>
</div>

<div class="snapshot col-md-6">
  <canvas id='can' width ='500' height='375'></canvas>
  <img src="" id="photo">
</div>

<div class="tags-list">
<div>

<div id="#s3-save">
  <%= render :template => 'photos/_modal' %>
</div>
