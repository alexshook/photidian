<div class="pure-u-1-3 pure-u-md-1-3">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'pure-form pure-form-stacked'}) do |f| %>
  <%= f.error_notification %>

  <div>
    <%= f.input :email, required: true %>
    <%= f.input :password, required: true %>
    <%= f.input :password_confirmation, required: true %>
    <%= f.input :username, required: true %> Your username will be public.
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "pure-button pure-button-primary" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div><!-- end pure-u-2-5 -->

