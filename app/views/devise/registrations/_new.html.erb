<div class="modal fade" id="sign-up-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Sign up</h2>
      </div>
      <div class="modal-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name, html: {class: 'form-horizontal'})) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs form-group">
            <%= f.input :email, required: true, class: "form-control" %>
            <%= f.input :password, required: true, class: 'form-control' %>
            <%= f.input :password_confirmation, required: true, class: 'form-control' %>
            <%= f.input :username, required: true, class: 'form-control' %> Your username will be public.
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
